# ========================================
# InnoSistemas - Variables de Entorno
# ========================================

# Perfil de Spring Boot (dev, test, prod)
SPRING_PROFILES_ACTIVE=dev

# Puerto de la aplicación
PORT=8080

# ========================================
# Base de Datos PostgreSQL
# ========================================
DATABASE_URL=jdbc:postgresql://localhost:5432/innosistemas
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=password

# Pool de conexiones
DB_POOL_SIZE=20
DB_MIN_IDLE=5

# Configuración JPA
JPA_DDL_AUTO=update
JPA_SHOW_SQL=false

# ========================================
# Redis Cache (opcional)
# ========================================
CACHE_TYPE=simple
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ========================================
# JWT Authentication
# ========================================
# IMPORTANTE: Cambiar en producción con un secreto seguro de al menos 256 bits
JWT_SECRET=CHANGE_THIS_SECRET_KEY_IN_PRODUCTION_USE_ENVIRONMENT_VARIABLE_WITH_STRONG_RANDOM_VALUE
JWT_EXPIRATION=3600
JWT_REFRESH_EXPIRATION=86400

# ========================================
# GraphQL Configuration
# ========================================
GRAPHQL_PLAYGROUND=true

# ========================================
# CORS Configuration
# ========================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# ========================================
# Logging Configuration
# ========================================
LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=INFO
WEB_LOG_LEVEL=INFO
SQL_LOG_LEVEL=WARN
HIBERNATE_LOG_LEVEL=WARN
LOG_FILE=logs/innosistemas.log

# ========================================
# Email Configuration (opcional)
# ========================================
EMAIL_NOTIFICATIONS=false
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
EMAIL_FROM=noreply@innosistemas.udea.edu.co

# ========================================
# File Upload Configuration
# ========================================
MAX_FILE_SIZE=10MB
MAX_REQUEST_SIZE=50MB
FILE_UPLOAD_DIR=./uploads
MAX_FILE_SIZE_BYTES=10485760

# ========================================
# Monitoring & Actuator
# ========================================
HEALTH_SHOW_DETAILS=when_authorized
PROMETHEUS_ENABLED=true

# ========================================
# Universidad de Antioquia LDAP (opcional)
# ========================================
LDAP_ENABLED=false
LDAP_URL=ldap://ldap.udea.edu.co:389
LDAP_BASE_DN=dc=udea,dc=edu,dc=co
LDAP_USER_DN_PATTERN=uid={0},ou=people

# ========================================
# Team Configuration
# ========================================
TEAM_MIN_MEMBERS=2
TEAM_MAX_MEMBERS=3

# ========================================
# Notifications Configuration
# ========================================
IN_APP_NOTIFICATIONS=true
NOTIFICATION_RETENTION=30